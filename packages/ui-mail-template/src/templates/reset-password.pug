extends layout-main.pug

block layout_title
  title XPON Assessment System: Reset Password

block content
  tr
    td(style={ padding: '12px 24px' })
      h1
        | XPON Assessment System: Reset Password

  tr
    td(style={ padding: '12px 24px' })
      p
        p Hi [name],
        p You recently requested to reset the password for your XPON Assessment Platform account. Click the link below to proceed.
        p [link]
        p This password reset link is only valid for the next 30 minutes.
        p If you have any other questions, please do not hesitate to contact us at 
          +button({ variant: 'link', href: 'mailto:hr@xpon.ai', text: 'hr@xpon.ai'  }).
        p Thank you,
        p XPON recruitment team.

      


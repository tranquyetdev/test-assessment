mixin button({ variant = 'button', variableName = '' })
  case variant
    when 'button'
      a(
        style={
          'background-color': '#008CBA',
          border: 'none',
          color: 'white',
          padding: '15px 32px',
          'text-align': 'center',
          'text-decoration': 'none',
          display: 'inline-block',
          cursor: 'pointer',
          'font-size': '16px',
        }
        href=`{{${variableName}}}`
      )
        | Button Here...
    when 'link'
      a(
        style={
          'text-decoration': 'underline',
          display: 'inline-block',
          cursor: 'pointer',
          'font-size': '16px',
        }
        href=`{{${variableName}}}`
      )
        | Link Here...


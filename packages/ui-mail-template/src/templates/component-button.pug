mixin button({ variant = 'button', href='', text='' })
  case variant
    when 'button'
      a(
        style={
          border: 'none',
          'background-color': '#00D4FF',
          'text-align': 'center',
          display: 'inline-block',
          'text-decoration': 'none',
          cursor: 'pointer',
          color: '#2B0444',
          padding: '12px 17px',
          'font-weight': 700,
          'font-size': '15px',
          'line-height': '24px',
          'box-shadow': '5px 5px 0px #983795',
        }
        target='_blank'
        href=href
      )= text
    when 'link'
      a(
        style={
          'text-decoration': 'underline',
          color: '#000000',
          cursor: 'pointer',
          'font-size': '16px',
          'font-weight': 500,
        }
        target='_blank'
        href=href
      )= text


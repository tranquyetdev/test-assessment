{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@test-assessment/*": [
        "apps/*/src/index.ts",
        "packages/*/src/index.ts",
        "tools/*/src/index.ts"
      ],
      "@test-assessment/hook-form": ["packages/hook-form/src/index.ts"],
      "@test-assessment/u-mail-template": [
        "packages/u-mail-template/src/index.ts"
      ],
      "@test-assessment/ui-auth-protect": [
        "packages/ui-auth-protect/src/index.ts"
      ],
      "@test-assessment/ui-candidate-profile": [
        "packages/ui-candidate-profile/src/index.ts"
      ],
      "@test-assessment/ui-candidate-profile-modal": [
        "packages/ui-candidate-profile-modal/src/index.ts"
      ],
      "@test-assessment/ui-mail-template": [
        "packages/ui-mail-template/src/index.ts"
      ],
      "@test-assessment/ui-module-layout-auth": [
        "packages/ui-module-layout-auth/src/index.ts"
      ],
      "@test-assessment/ui-components": ["packages/ui-components/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
